upstream php-handler {
	server unix:/var/run/php5-fpm.sock;
}

server {
	listen 80;
	server_name localhost;

	location / {
		root /var/www/static;
	}

	location /oc {
	#redirect http requests for owncloud to https
		rewrite ^(.*) https://$host$1 permanent;
	}
}
server {
	listen 443 ssl;
	server_name localhost;

	ssl_certificate /etc/ssl/certs/opi.pem;
	ssl_certificate_key /etc/ssl/private/opi.key;

	client_max_body_size 10G;
	fastcgi_buffers 64 4K;


	include /etc/nginx/apps/*;

	location / {
		root /var/www/static;
	}

	location = /robots.txt {
		allow all;
		log_not_found off;
		access_log off;
	}

	location ~ ^/(data|config|\.ht|db_structure\.xml|README) {
		deny all;
	}

}

